<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinnerPort"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        ></Spinner>

    <ListView
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:id="@+id/list"
        android:visibility="gone"></ListView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/nameLabel"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/pointsLabel"
            android:layout_below="@+id/nameLabel"
            android:layout_alignLeft="@+id/nameLabel"
            android:layout_alignStart="@+id/nameLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/stealLabel"
            android:layout_below="@+id/pointsLabel"
            android:layout_alignLeft="@+id/pointsLabel"
            android:layout_alignStart="@+id/pointsLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/blockLabel"
            android:layout_below="@+id/stealLabel"
            android:layout_alignLeft="@+id/stealLabel"
            android:layout_alignStart="@+id/stealLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/assistLabel"
            android:layout_below="@+id/nameLabel"
            android:layout_toRightOf="@+id/pointsLabel"
            android:layout_marginLeft="42dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/reboundLabel"
            android:layout_alignTop="@+id/stealLabel"
            android:layout_alignLeft="@+id/assistLabel"
            android:layout_alignStart="@+id/assistLabel" />
    </RelativeLayout>

</LinearLayout>
